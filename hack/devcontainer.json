// documentation: https://containers.dev/implementors/json_reference/
{
    "name": "dev-toolbox",
    "image": "europe-docker.pkg.dev/kyma-project/prod/dev-toolbox:main",
    // Features to add to the dev container. More info: https://containers.dev/features.
    // "features": {},
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postAttachCommand": "dev_toolbox_versions",
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-containers",
                // Dockefile IntelliSense
                "ms-azuretools.vscode-containers"
            ]
        }
    },
    "remoteEnv": {
        "KUBECONFIG": "/root/.kube/config"
    },
    "mounts": [
        "source=${localEnv:HOME}/.kube/config,target=/root/.kube/config,type=bind,consistency=cached"
    ],
    // use host network to be able to access local k3d clusters
    "runArgs": [
        "--network=host"
    ]
}
